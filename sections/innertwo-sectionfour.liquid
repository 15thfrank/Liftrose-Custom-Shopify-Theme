<div class="container hsfour" style="">
	<div class="row row-lg">
		<h1 class="page-title__heading text-center"> {{section.settings.sectiontitle}} </h1>
		<div  class="row text center">
			{% for block in section.blocks %}
			<div class="singleingredient text-center">
				<img src="{{block.settings.bimage | img_url: '194x194'}}" class="roundedimage bimg text-center" alt="" />
				<h3 class="btitle text-center">{{block.settings.btitle}}</h3>
			</div>
			{% endfor %}
		</div>
		<div class="text-center">
			<a href="{{section.settings.btnlink}}" class="button inline">{{section.settings.btntext}}</a>
		</div>
	</div>
</div>




{% schema %}
	{
		"name": "Benefits Section",
		"max_blocks": 6,
		"settings": [
			{
				"id": "sectiontitle",
				"type": "text",
				"label": "Section Title",
				"default": "Amazing Benefits of LiftRose Supplement"
			},
			{
				"id" : "btnlink",
				"type": "url",
				"label": "Button Link"
			},
			{
				"id": "btntext",
				"type": "text",
				"label": "Button Text",
				"default": "Buy Now"
			}
		],
		"blocks": [
			{
				"name": "Benefit",
				"type": "select",
				"settings": [
					{
						"id": "bimage",
						"type": "image_picker",
						"label": "Benefit Image"
					},
					{
						"id": "btitle",
						"type": "text",
						"label": "Benefit Title",
						"default": "Lorem ipsum"
					}
				]
			}
		]
	}

{% endschema %}

