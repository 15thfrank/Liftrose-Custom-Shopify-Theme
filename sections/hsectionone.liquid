<link href="https://vjs.zencdn.net/7.6.5/video-js.css" rel="stylesheet">
<div class="container-wrap headhome" style="height: 100vh;width: 100%;">
	<div style="position:absolute; right: 0; left:0; width: auto; height: auto; z-index: 1; overflow: hidden;">
        <video id='my-video' class='video-js' preload='auto' width='100%' height='100%' poster='{{section.settings.posterimg | img_url: "master"}}' data-setup='{}' autoplay loop muted style="min-height: 100%;min-width: 100%; right: 0; bottom: 0;left:0%;height: 100vh;margin-top:-20px;overflow: hidden;object-fit: fill;"> 
            <source src='{{section.settings.videourlmp4}}' type='video/mp4'>
            <source src='{{section.settings.videourlwebm}}' type='video/webm'>
            <p class='vjs-no-js'>To view this video please enable JavaScript, and consider upgrading to a web browser that<a href='https://videojs.com/html5-video-support/' target='_blank'>supports HTML5 video</a>
            </p>
        </video>
    </div>
    <div class="row" style="z-index: 2; position: relative; background: rgba(255,255,255,0.001);top: 0;bottom: 0;left: 0;right: 0;height: 100vh;">
        <div class="row row-lg">
            <div class="feature-item feature-item--odd" data-alignment="center" style="vertical-align: middle; height:100vh;">
                <div class="feature-image animated fadeInRight" data-animation="fadeInRight" style="height: inherit;visibility: hidden;">
                    <img src="{{section.settings.pimage | img_url: 'master'}}" class="mx-auto d-block" style="height: 100%;" />
                </div>
                <div class="feature-text animated fadeInLeft" style="/*padding-top:80px;*/" data-animation="fadeInLeft">
                    <h1 class="size--normal">{{section.settings.title}}</h1>
                    <p class="size--large" style="text-align:left;">{{section.settings.subtitle}}</p>
                    <a href="{{section.settings.link}}" class="button button--normal button--primary">{{section.settings.btntext}}</a>
                </div>
            </div>
        </div>
	</div>
</div>
{% schema %}
    {
        "name": "AboveFold Banner",
        "class": "above-the-fold",
        "settings": [
            {
                "id": "pimage",
                "type": "image_picker",
                "label": "Image"
            },
            {
                "id": "title",
                "type": "text",
                "label": "Headline",
                "default": "Time to Look and Feel Young, and Fresh!"
            },
            {
                "id": "subtitle",
                "type": "text",
                "label": "Sub Headline",
                "default": "Life Rose is a multifunctional treatment for soft, hydrate, and natural skin."
            },
            {
                "type": "url",
                "id": "videourlwebm",
                "label": "Video WEBM"
            },
            {
                "type": "url",
                "id": "videourlmp4",
                "label": "Video MP4"
            },
            {
                "type": "image_picker",
                "id": "posterimg",
                "label": "Poster Image",
                "info": "Image that appears before video loads"
            },
            {
                "id": "btntext",
                "type": "text",
                "label": "Buton text",
                "default": "Buy Now"
            },
            {
                "id": "link",
                "type": "url",
                "label": "Button Link"
            }
        ],
        "presets": [
            {
            "name": "Above the Fold Banner -MAIN",
            "category": "Arielle Studios"
            }
        ]
    }
{% endschema %}

