<div class="container hsthree">
	<div class="row row-lg ptone">
		<h1 class="page-title__heading text-center"> {{section.settings.sectiontitle}} </h1>

		<div class="collectionGrid-row row row-lg inline">
			<div class="collectionBlock js-collectionBlock block s1 sm_s12 lg_s13    animated fadeInUp" style="text-align: right;width:25%;z-index: 999;">
				<div class="pbullet bulletleft" style="display: inline-flex;">
					<div class="bulletleftparagraph">
						<h3 class="pbullettitle"> {{section.settings.bulletonetitle}} </h3>
						<p class="pbulletparagraph"> {{section.settings.bulletonetext}} </p>
					</div>
					<div class="bulletleftimg">
						<img src=" {{section.settings.bulletoneimg | img_url: 'master'}} " class=""/>
					</div>
				</div>
				<div class="pbullet bulletleft" style="display: inline-flex;">
					<div class="bulletleftparagraph">
						<h3 class="pbullettitle"> {{section.settings.bullettwotitle}} </h3>
						<p class="pbulletparagraph"> {{section.settings.bullettwotext}} </p>
					</div>
					<div class="bulletleftimg">
						<img src=" {{section.settings.bullettwoimg | img_url: 'master'}} " class=""/>
					</div>
				</div>
			</div>

			<div class="collectionBlock js-collectionBlock block s1 sm_s12 lg_s13  imgcenter  animated fadeInUp" style="text-align: center;width:49%;" id="pt2img">
				<img src=" {{ section.settings.spgimage | img_url: 'master'}} " />
			</div>

			<div class="collectionBlock js-collectionBlock block s1 sm_s12 lg_s13    animated fadeInUp" style="text-align: left;width:25%;">
				<div class="pbullet bulletright" style="display: inline-flex;">
					<div class="bulletrightimg">
						<img src=" {{section.settings.bulletthreeimg | img_url: 'master'}} " class=""/>
					</div>
					<div class="bulletrightparagraph">
						<h3 class="pbullettitle"> {{section.settings.bulletthreetitle}} </h3>
						<p class="pbulletparagraph"> {{section.settings.bulletthreetext}} </p>
					</div>
					
				</div>
				<div class="pbullet bulletright" style="display: inline-flex;">
					<div class="bulletrightimg">
						<img src=" {{section.settings.bulletfourimg | img_url: 'master'}} " class=""/>
					</div>
					<div class="bulletrightparagraph">
						<h3 class="pbullettitle"> {{section.settings.bulletfourtitle}} </h3>
						<p class="pbulletparagraph"> {{section.settings.bulletfourtext}} </p>
					</div>
					
				</div>
			</div>
		</div>
		<div class="row row-med u-center">
			<a href="{{section.settings.btnonelink}}" class="button inline btnsec">{{section.settings.btnonetext}}</a> &nbsp; <a href="{{section.settings.btntwolink}}" class="button inline">{{section.settings.btntwotext}}</a>
		</div>
	</div>
</div>



